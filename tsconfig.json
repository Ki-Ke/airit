{
  "files": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "preserveConstEnums": true
  }
}